{
  "manifest_version": 3,
  "name": "Cute Animal Viewer",
  "version": "1.0",
  "description": "A simple app that shows random cute animal photos from Pexels.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://api.pexels.com/*"
  ]
}
